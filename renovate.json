{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":preserveSemverRanges",
    ":semanticPrefixFixDepsChoreOthers",
    ":enableVulnerabilityAlerts",
    ":separateMajorReleases",
    ":combinePatchMinorReleases",
    "group:monorepos",
    "group:recommended",
    "helpers:disableTypesNodeMajor",
    ":maintainLockFilesWeekly",
    "schedule:daily"
  ],
  "labels": [
    "renovate"
  ],
  "packageRules": [
    {
      "addLabels": [
        "addon",
        "docker"
      ],
      "commitMessageExtra": "to {{#if isMajor}}v{{{newMajor}}}{{else}}{{#if isSingleVersion}}v{{{newVersion}}}{{else}}{{{newValue}}}{{/if}}{{/if}}",
      "commitMessageTopic": "{{depName}} add-on Docker image",
      "datasourceTemplate": "docker",
      "matchDepTypes": [
        "docker"
      ],
      "matchFileNames": [
        "**/config.yaml"
      ],
      "matchPackagePatterns": [
        "(?<registry>\\S+\\.\\S+)/(?<depName>[a-z0-9-]+/[a-z0-9-]+)(?::(?<currentValue>[a-z0-9.-]+))?"
      ],
      "prBodyColumns": [
        "Package",
        "Change",
        "Type",
        "New value"
      ],
      "prBodyDefinitions": {
        "Change": "{{{displayFrom}}} -> {{{displayTo}}}",
        "Type": "{{{updateType}}}"
      },
      "versioning": "docker"
    },
    {
      "addLabels": [
        "dependencies",
        "bun"
      ],
      "commitMessageExtra": "to {{#if isMajor}}v{{{newMajor}}}{{else}}{{#if isSingleVersion}}v{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}{{/if}}",
      "commitMessageTopic": "{{depName}}",
      "matchManagers": [
        "bun"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "prBodyColumns": [
        "Package",
        "Change",
        "Type",
        "New value"
      ],
      "prBodyDefinitions": {
        "Change": "{{{displayFrom}}} -> {{{displayTo}}}",
        "Type": "{{{updateType}}}"
      }
    }
  ],
  "prCreation": "not-pending",
  "stabilityDays": 1
}